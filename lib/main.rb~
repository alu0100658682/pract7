require "./fraccion.rb"
	
	fr1 = Fraccion.new(8, 16)
	
	fr2 = Fraccion.new(13, 7)

	puts "El numerador de la fraccion fr1 es:  #{fr1.n}"	
	
	puts "El numerador de la fraccion fr2 es:  #{fr2.n}"
	
	puts "El denominador de la fraccion fr1 es: #{fr1.d}"

	puts "El denominador de la fraccion fr2 es: #{fr2.d}"	

	puts "La fracción fr1 se muestra por pantalla :  #{fr1}"

	puts "fracción1: #{fr1}, vale: #{fr1.to_f}"

	puts "El valor absoluto de fr1: #{fr1.abs}"

	puts "Opuesta de la fr1 es #{-r1}"

	puts "fr1 es menor que fr2 #{fr1 < fr2}"

	puts "fr1 es mayor que r2 #{fr1 > fr2}"

	puts "fr1 es menor o igual que r2 #{fr1 <= fr2}"

	puts "fr1 es mayor o igual que r2 #{fr1 >= fr2}"
